# Host port to expose the IDE
PORT=3000

# Set a token to require auth (recommended on public EC2)
# Example: run `openssl rand -hex 16` to generate one
# CONNECTION_TOKEN=7a9f3c2f0c9e4a1db8a4c5e6f7a8b9c0

# Set to true to disable token auth (not recommended on public networks)
DISABLE_CONNECTION_TOKEN=false

# Folder on the EC2 host to mount as /workspace in the container
# Default is the parent directory of this repo; change to your project path if needed
WORKSPACE_DIR=..